<Window x:Class="Rsiglo21.view.admpanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rsiglo21.view"
        mc:Ignorable="d"
        Title="admpanel" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/Fondo.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="132"/>
            <ColumnDefinition/>



        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Label Content="Rsiglo21" HorizontalAlignment="Left" VerticalAlignment="Center" Height="60" Width="147" FontSize="36" Background="{x:Null}" Foreground="#FFFFBB00" FontFamily="French Script MT" Grid.ColumnSpan="2" FontWeight="Bold" FontStyle="Italic"/>
        <TabControl Grid.Row ="1" Background="{x:Null}">
            <TabItem>
                <StackPanel Orientation="Vertical">
                    <RadioButton RenderTransformOrigin="1,0.503" Height="32" Width="116"/>
                </StackPanel>
            </TabItem>


        </TabControl>


    </Grid>
</Window>
